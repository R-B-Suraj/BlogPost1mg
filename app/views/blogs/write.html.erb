
<div>
<%= render partial: 'shared/header' %>
</div>

<div style="margin-left: 50px">
    <h1><strong>Create Blog</strong></h1>
<div>

<div>
    <% if @blog.present? && @blog.errors.any? %>
    <ul>
        <% @blog.errors.full_messages.each do |message| %>
        <li style="color:red"><%= message %></li>
        <% end %>
    </ul>
    <% end %>
</div>




<form action="/blogs/create" method="POST" enctype="multipart/form-data">

    <div>
    <label>Title:</label></br>
    <input type="text" name="title" required></br>
    </div>
    </br>
    <div>
    <label>Description:</label></br>
    <textarea name="desc" cols=30 rows=10 required> </textarea> </br>
    </div>
    </br>
    <div>
    <label>Photo:</label></br>
    <input type="file" name="image" accept="image/png, image/jpeg" required></br>
    </div> 
    </br>
    <input type="submit" value="Submit">

</form> 




