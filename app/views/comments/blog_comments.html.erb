


<div style="border:2px solid grey; width: 600px;padding:10px;">
<%if @comments.first.parent %>
<div style="margin-bottom:15px; font-size: 20px; font-weight:700">Reply to : <%=@comments.first.parent.text%> &nbsp &nbsp &nbsp <span style="font-weight:500; font-size:18px;"> on <a href="http://localhost:3000/blogs/<%=@blog_id %>">this Blog</a></span> </div>
<% end %>
    <% @comments.each do |reply| %> 
        <div style="padding:10px; border-radius:10px; word-wrap:break-word; margin:5px; background:#E8E8E8"> <%=reply.text%> &nbsp &nbsp &nbsp <a href="http://localhost:3000/blogs/<%=@blog_id%>/comments/<%=reply.id%>">reply</a> </div>

    <% end %>

    
    <form action="http://localhost:3000/blogs/<%=@blog_id%>/comments/create/<%=@parent_id%>" method="post"  style="margin-top:50px;">
        <textarea type="text" name="comment" placeholder="comment here ....." rows=5 style="width:450px;" required></textarea>
        <input type="submit" value="Submit">
    </form>
    </br>
    <a href="http://localhost:3000/">Home</a>

</div>

